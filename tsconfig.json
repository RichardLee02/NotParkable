{
  "compilerOptions": {
    "target": "ES6",
    "allowJs": true,
    "strict": true,
    "module": "ES6",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "rootDir": "./",
    "baseUrl": "./",
    "outDir": "./dist",
    "allowSyntheticDefaultImports": true
  },
  "files": [
    "app.ts"
  ],
  "include": [
    "queries/**/*",
    "util/**/*",
    "routes/**/*",
  ],
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node",
  }
}